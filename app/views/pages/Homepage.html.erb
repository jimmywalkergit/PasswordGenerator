<body>

<h3><%=link_to 'MyPass Generator', "/"  %></h3>

<div id="alignthiscenter">
<form action="/pages/stringsub" method="post" class="basic-grey">
    <h2>User Generated Password 
    </h2>
  

  
  <br>
  
  <br>
    <label>
        Enter a Phrase or Sentence: 
        <input id="txtPhrase" type="text" name="mystring" maxlength="200" placeholder="Your preferred phrase or sentence" />
    </label>
    
 
    
        
         

   
  
  
         
        
  
  <br>
  <label>
        Number of Characters to Generate: <select id="ddlNumofDigits" name="lengthtomake" >
        <option value="8">8</option>
        <option value="9">9</option>
    <option value="10">10</option>
    <option value="11">11</option>
    <option value="12">12</option>
    <option value="13">13</option>
    <option value="14">14</option>
    <option value="15">15</option>
    <option value="16">16</option>
    <option value="17">17</option>
    <option value="18">18</option>
    <option value="19">19</option>
    <option value="20">20</option>
    <option value="21">21</option>
    <option value="22">22</option>
    <option value="23">23</option>
    <option value="24">24</option>
    <option value="25">25</option>
    <option value="26">26</option>
    <option value="27">27</option>
    <option value="28">28</option>
    <option value="29">29</option>
    <option value="30">30</option>
    
        </select>
    </label> 

      <label>
         
       <input id="btnGenerate" class="button" type="submit" value="Generate" />
    </label>


  <br>
  <hr>
   <h2>Automatically Generated Passwords</h2>
        <span>Random Series of Numbers:</span>
        <p><b><%=generatenums(12)%></b></p>
    <br>
  <br>
        <span>Random Series of Characters:</span>
        <p><b><%=randomletters()%></b></p>

  <br>
  <br>
        <span>Oakland Word Blocks:</span>
        <p><b><%=randomsecure()%></b></p>


  <br>
    <br>
        
         
</form>

</div>


